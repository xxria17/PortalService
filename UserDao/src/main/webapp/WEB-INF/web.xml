<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>kr.ac.jejunu.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>userFilter</filter-name>
        <filter-class>kr.ac.jejunu.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>userFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>kr.ac.jejunu.UserContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>kr.ac.jejunu.UserRequestListener</listener-class>
    </listener>
</web-app>